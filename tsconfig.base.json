{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@svconnect/backend-common-application": [
        "libs/backend-common-application/src/index.ts"
      ],
      "@svconnect/backend-common-core": [
        "libs/backend-common-core/src/index.ts"
      ],
      "@svconnect/backend-common-infrastructure": [
        "libs/backend-common-infrastructure/src/index.ts"
      ],
      "@svconnect/backend-project-core": [
        "libs/backend-project-core/src/index.ts"
      ],
      "@svconnect/backend-speciality-core": [
        "libs/backend-speciality-core/src/index.ts"
      ],
      "@svconnect/backend-user-application": [
        "libs/backend-user-application/src/index.ts"
      ],
      "@svconnect/backend-user-core": ["libs/backend-user-core/src/index.ts"],
      "@svconnect/backend-user-infrastructure": [
        "libs/backend-user-infrastructure/src/index.ts"
      ]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
